<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCSWeb</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-cash-coin"></i> CMCS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Lecturer Dropdown -->
                        @if (User.IsInRole("Lecturer"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="lecturerDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person"></i> Lecturer
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="lecturerDropdown">
                                    <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Submit"><i class="bi bi-plus-circle"></i> Submit Claim</a></li>
                                    <li><a class="dropdown-item" asp-controller="Lecturer" asp-action="Track"><i class="bi bi-list-check"></i> Track Claims</a></li>
                                </ul>
                            </li>
                        }

                        <!-- Coordinator Dropdown -->
                        @if (User.IsInRole("Coordinator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="coordinatorDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-eye"></i> Coordinator
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="coordinatorDropdown">
                                    <li><a class="dropdown-item" asp-controller="Coordinator" asp-action="Manage"><i class="bi bi-list-task"></i> Verify Claims</a></li>
                                    <li><a class="dropdown-item" asp-controller="Coordinator" asp-action="Verified"><i class="bi bi-check-circle"></i> Verified Claims</a></li>
                                </ul>
                            </li>
                        }

                        <!-- Manager Dropdown -->
                        @if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-award"></i> Manager
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="managerDropdown">
                                    <li><a class="dropdown-item" asp-controller="Manager" asp-action="Manage"><i class="bi bi-check-lg"></i> Approve Claims</a></li>
                                    <li><a class="dropdown-item" asp-controller="Manager" asp-action="Approved"><i class="bi bi-file-earmark-check"></i> Approved Claims</a></li>
                                </ul>
                            </li>
                        }

                        <!-- HR Dropdown -->
                        @if (User.IsInRole("HR"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="hrDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-people"></i> HR
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="hrDropdown">
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="Users"><i class="bi bi-person-plus"></i> User Management</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="Reports"><i class="bi bi-graph-up"></i> Reports</a></li>
                                </ul>
                            </li>
                        }

                        <!-- ADD REPORTS LINK HERE -->
                        @if (User.IsInRole("HR") || User.IsInRole("Manager") || User.IsInRole("Coordinator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Report")">
                                    <i class="bi bi-graph-up"></i> Reports
                                </a>
                            </li>
                        }
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Help">Help</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right"></i> Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Main Content Area -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-4 mt-5 border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-start">
                    <strong>Contract Monthly Claim System</strong><br>
                    <small>Streamlining educational claim management</small>
                </div>
                <div class="col-md-6 text-end">
                    &copy; @DateTime.Now.Year - CMCSWeb v2.0<br>
                    <small>Enhanced with Authentication & Automation</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <!-- jQuery (required for Bootstrap and some validation) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Global site JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>