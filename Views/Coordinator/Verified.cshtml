@model IEnumerable<CMCSWeb.Models.Claim>
@{
    ViewData["Title"] = "Verified Claims";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Verified Claims</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No Verified Claims</h5>
            <p>There are no verified claims awaiting manager approval at the moment.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Total</th>
                            <th>Verified Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>#@claim.Id</td>
                                <td>@claim.User?.FullName</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.VerifiedAt?.ToString("MMM dd, yyyy")</td>
                                <td><span class="badge bg-info">Verified</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Manage" class="btn btn-primary">Back to Pending Claims</a>
    </div>
</div>