@model IEnumerable<CMCSWeb.Models.Claim>
@{
    ViewData["Title"] = "Approved Claims";
    var totalAmount = Model.Sum(c => c.TotalAmount);
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Approved Claims</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No Approved Claims</h5>
            <p>There are no approved claims in the system.</p>
        </div>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h5>Total Approved</h5>
                                <h3>@Model.Count()</h3>
                                <p>Claims</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h5>Total Amount</h5>
                                <h3>@totalAmount.ToString("C")</h3>
                                <p>Payments</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h5>This Month</h5>
                                <h3>@Model.Count(c => c.ApprovedAt?.Month == DateTime.Now.Month)</h3>
                                <p>Claims</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Total</th>
                            <th>Approved By</th>
                            <th>Approved Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>#@claim.Id</td>
                                <td>@claim.User?.FullName</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.ApprovedBy</td>
                                <td>@claim.ApprovedAt?.ToString("MMM dd, yyyy")</td>
                                <td><span class="badge bg-success">Approved</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Manage" class="btn btn-primary">Back to Pending Claims</a>
    </div>
</div>