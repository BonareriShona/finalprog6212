@model IEnumerable<CMCSWeb.Models.Claim>
@{
    ViewData["Title"] = "Approve Claims";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Approve Verified Claims</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No Claims to Approve</h5>
            <p>There are no verified claims awaiting approval at the moment.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Department</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Verified By</th>
                            <th>Verified Date</th>
                            <th>Document</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>#@claim.Id</td>
                                <td>@claim.User?.FullName</td>
                                <td>@claim.User?.Department</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate.ToString("C")</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.VerifiedBy</td>
                                <td>@claim.VerifiedAt?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                    {
                                        <a href="@Url.Content("~/uploads/" + claim.DocumentPath)" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No file</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="Approve" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                    </form>
                                    <form asp-action="Reject" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this claim?')">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Approved" class="btn btn-outline-primary">View Approved Claims</a>
    </div>
</div>