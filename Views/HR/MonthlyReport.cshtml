@model IEnumerable<CMCSWeb.Models.Claim>
@{
    ViewData["Title"] = "Monthly Report";
    var totalAmount = ViewBag.TotalAmount ?? 0;
    var month = ViewBag.Month ?? DateTime.Now.Month;
    var year = ViewBag.Year ?? DateTime.Now.Year;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Monthly Report - @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(month) @year</h2>
        <button onclick="window.print()" class="btn btn-primary">Print Report</button>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Report Summary</h5>
                    <p><strong>Total Claims:</strong> @Model.Count()</p>
                    <p><strong>Total Amount:</strong> @totalAmount.ToString("C")</p>
                    <p><strong>Period:</strong> @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(month) @year</p>
                </div>
                <div class="col-md-6 text-end">
                    <p><strong>Generated On:</strong> @DateTime.Now.ToString("MMM dd, yyyy HH:mm")</p>
                    <p><strong>Generated By:</strong> HR Department</p>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">No approved claims found for this period.</div>
            }
            else
            {
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Department</th>
                            <th>Hours Worked</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                            <th>Approved Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.Id</td>
                                <td>@claim.User?.FullName</td>
                                <td>@claim.User?.Department</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate.ToString("C")</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.ApprovedAt?.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="5" class="text-end"><strong>Grand Total:</strong></td>
                            <td colspan="2"><strong>@totalAmount.ToString("C")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            }

            <div class="mt-4">
                <a asp-action="Reports" class="btn btn-secondary">Back to Reports</a>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn {
            display: none !important;
        }

        .card {
            border: none !important;
        }
    }
</style>