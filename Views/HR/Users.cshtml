@model IEnumerable<CMCSWeb.Models.ApplicationUser>
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">User Management</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>All Users</h4>
        <a asp-action="CreateUser" class="btn btn-primary">Add New User</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Hourly Rate</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge
                                        @(user.UserRole == "HR" ? "bg-danger" :
                                                                            user.UserRole == "Coordinator" ? "bg-warning" :
                                                                            user.UserRole == "Manager" ? "bg-info" : "bg-secondary")">
                                @user.UserRole
                            </span>
                        </td>
                        <td>
                            @if (user.UserRole == "Lecturer")
                                {
                                    @user.HourlyRate?.ToString("C")
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>@user.Department</td>
                            <td>
                                <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a href="#" class="btn btn-sm btn-info">Reset Password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>