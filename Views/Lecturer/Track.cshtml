@model IEnumerable<CMCSWeb.Models.Claim>
@{
    ViewData["Title"] = "Track My Claims";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Track My Claims</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No Claims Submitted</h5>
            <p>You haven't submitted any claims yet. <a asp-action="Submit" class="alert-link">Submit your first claim</a> to get started.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                            <th>Submitted</th>
                            <th>Status</th>
                            <th>Progress</th>
                            <th>Document</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>#@claim.Id</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate.ToString("C")</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.SubmittedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @switch (claim.Status)
                                    {
                                        case CMCSWeb.Models.ClaimStatus.Pending:
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case CMCSWeb.Models.ClaimStatus.Verified:
                                            <span class="badge bg-info text-dark">Verified</span>
                                            break;
                                        case CMCSWeb.Models.ClaimStatus.Approved:
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case CMCSWeb.Models.ClaimStatus.Rejected:
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                    }
                            </td>
                            <td style="width: 150px;">
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar
                                                @(claim.Status == CMCSWeb.Models.ClaimStatus.Pending ? "bg-warning" :
                                                                                       claim.Status == CMCSWeb.Models.ClaimStatus.Verified ? "bg-info" :
                                                                                       claim.Status == CMCSWeb.Models.ClaimStatus.Approved ? "bg-success" : "bg-danger")"
                                     role="progressbar"
                                     style="width: @(claim.Status == CMCSWeb.Models.ClaimStatus.Pending ? 25 :
                                                                                              claim.Status == CMCSWeb.Models.ClaimStatus.Verified ? 50 :
                                                                                              claim.Status == CMCSWeb.Models.ClaimStatus.Approved ? 100 : 100)%">
                                                                                                                                                         </div>
                                                                                                                                                     </div>
                                                                                                                                                     <small class="text-muted">
                                @(claim.Status == CMCSWeb.Models.ClaimStatus.Pending ? "With Coordinator" :
                                                                claim.Status == CMCSWeb.Models.ClaimStatus.Verified ? "With Manager" :
                                                                claim.Status == CMCSWeb.Models.ClaimStatus.Approved ? "Approved" : "Rejected")
                            </small>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                    {
                                        <a href="@Url.Content("~/uploads/" + claim.DocumentPath)" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No file</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Submit" class="btn btn-primary">Submit New Claim</a>
        </div>
    }
</div>