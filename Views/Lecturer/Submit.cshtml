@model CMCSWeb.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<h2>Submit Your Claim</h2>

<!-- Show validation errors -->
<div asp-validation-summary="All" class="alert alert-danger"></div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Submit" method="post" enctype="multipart/form-data" id="claimForm">
    @Html.AntiForgeryToken()

    <!-- REMOVED UserId hidden field since it's no longer required from form -->
    <!-- Display auto-populated user info -->
    <div class="mb-3">
        <label class="form-label">Lecturer Name</label>
        <input class="form-control" value="@ViewBag.UserName" readonly />
        <small class="form-text text-muted">This field is auto-populated</small>
    </div>

    <div class="mb-3">
        <label asp-for="HoursWorked" class="form-label">Hours Worked *</label>
        <input asp-for="HoursWorked" id="hoursWorked" class="form-control" type="number" step="0.01" min="0.01" max="180" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Hourly Rate (RM)</label>
        <input type="number" id="hourlyRateDisplay" class="form-control" value="@ViewBag.HourlyRate" readonly />
        <small class="form-text text-muted">This field is auto-populated based on your profile</small>

        <input asp-for="HourlyRate" type="hidden" value="@ViewBag.HourlyRate" />
    </div>

    <!-- Auto-calculation display -->
    <div class="mb-3">
        <label class="form-label">Total Amount (RM)</label>
        <input id="totalAmount" class="form-control" readonly />
        <small class="form-text text-muted">This amount is automatically calculated</small>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes (Optional)</label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Document (optional)</label>
        <input type="file" name="document" class="form-control" />
        <small class="form-text text-muted">Maximum file size: 10MB. All file types are accepted.</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit Claim</button>
    <a asp-action="Track" class="btn btn-secondary">View My Claims</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            var hourlyRate = @ViewBag.HourlyRate;

            function calculateTotal() {
                var hours = parseFloat($('#hoursWorked').val()) || 0;

                if (hours > 0 && hourlyRate > 0) {
                    var total = hours * hourlyRate;
                    $('#totalAmount').val('RM ' + total.toFixed(2));
                } else {
                    $('#totalAmount').val('');
                }
            }

            $('#hoursWorked').on('input', calculateTotal);
            calculateTotal();
        });
    </script>
}